@model invitation3.Models.GuestResponse

@{
    ViewBag.Title = "RSVPForm";
}


<div class="panel panel-success">
    <div class="panel heading text-center "><h2>RSVP Form</h2>
        <div class="panel-body">
            
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label> Your Name:</label>@Html.TextBoxFor(X => X.Name, new { @class = "form-group" })
                </div>
                <div class="form-group">
                    <label> Your Email:</label>@Html.TextBoxFor(X => X.Email, new { @class = "form-group" })
                </div>
                <div class="form-group">
                    <label> Your Phone:</label>@Html.TextBoxFor(X => X.Phone, new { @class = "form-group" })
                </div>

                <div class="form-group">
                    <label>
                        Will you attend?
                    </label>
                    @Html.DropDownListFor(x => x.WillAttend, new[]
{
           new SelectListItem
       {
                               Text = "Yes I will be there" ,
                                Value = bool.TrueString
       },

            new SelectListItem
            {
                              Text = "No I will attend",
                              Value = bool.FalseString
            },


        }, "Choose an Option")
                    <div class="text-center">
                        <input type="submit" value="Submit RSVP" />
                    </div>
                </div>
            }


        </div>
    </div>
</div>



  

